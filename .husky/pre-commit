#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ðŸŽ¯ Rodando os tests com Pest..."
npm test

# Pega os arquivos PHP adicionados no commit
files=$(git diff --cached --name-only --diff-filter=ACM -- '*.php')

if [ -n "$files" ]; then
  echo "ðŸŽ¯ Formatando arquivos PHP com Pint..."
  ./vendor/bin/pint $files -q

  echo "ðŸŽ¯ Adicionando arquivos formatados ao Git..."
  git add $files
else
  echo "âœ… Nenhum arquivo PHP para formatar"
fi

echo "ðŸŽ¯ Rodando lint-staged..."
npx --no-install lint-staged

echo "ðŸŽ¯ Rodando o Duster lint..."
./vendor/bin/duster lint --dirty

echo "ðŸŽ¯ Rodando o Duster fix..."
./vendor/bin/duster fix --dirty
